<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="2.5"
	type="template"
	method="upgrade" client="site">
	<name>atmust</name>
	<version>1.0.</version>
	<creationDate>1 September 2015</creationDate>
	<author>AtMUST</author>
	<authorEmail>amziyal@gmail.com</authorEmail>
	<authorUrl>http://www.ziyalogy.xyz</authorUrl>
	<copyright>Copyright (C). All Rights Reserved.</copyright>
	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>	
	<![CDATA[
<p>A Joomla 3 template based on the JAT3 framework that I intended for Joomla enthusiasts at Mbarara University of 
Science and Technology to use while building Joomla websites meant to be .must.ac.ug subdomains</p>

		]]>
	
	</description>
	<engine>t3</engine>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>info.xml</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>params.ini</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>language</folder>
		<folder>etc</folder>
		<folder>themes</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>info</folder>
		<folder>blocks</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_atmust.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_atmust.sys.ini</language>
	</languages>

	<positions>
		<position>hornav</position>
		<position>breadcrumbs</position>
		<position>search</position>
		<position>slideshow</position>
		<position>masshead</position>
		<position>banner</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>top_links</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
